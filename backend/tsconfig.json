{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./build/",
    "module": "CommonJS",
    "allowJs": true,
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "declaration": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}